<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:outlineAmbientShadowColor="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/chapter_num_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/interlight"
            android:text="Chapter 1  -"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/verse_num_item"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/chapter_num_item"
            android:layout_alignBottom="@+id/chapter_num_item"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/chapter_num_item"
            android:fontFamily="@font/interlight"
            android:text="Verse 2"
            android:textSize="18sp"
            android:textStyle="italic" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>